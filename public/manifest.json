{
  "manifest_version": 3,
  "name": "ScamGuard",
  "version": "1.0.0",
  "description": "AI-Powered Cybersecurity website Behavioural Analyst",
  "permissions": ["sidePanel", "tabs", "scripting", "activeTab", "storage"],
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "128": "icons/favicon-128x128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Click to open ScamGuard"
  },
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:8000/*",
    "https://scamguard-expressapi.onrender.com/*",
    "https://scamguard-py.onrender.com/*"
  ]
}
